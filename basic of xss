<?php
// ---------------------------------------------
// 1. SET COOKIE FOR TESTING
// ---------------------------------------------
setcookie("testcookie", "HELLO123", time() + 3600, "/");
 
// ---------------------------------------------
// 2. CREATE comments.txt IF NOT EXISTS
// ---------------------------------------------
$commentsFile = __DIR__ . "/comments.txt";
 
if (!file_exists($commentsFile)) {
    file_put_contents($commentsFile, "");
}
 
// ---------------------------------------------
// 3. HANDLE COMMENT SUBMISSION (XSS VULNERABLE)
// ---------------------------------------------
if ($_SERVER["REQUEST_METHOD"] === "POST") {
    $comment = $_POST["comment"]; // intentionally unsanitized
 
    // REFLECTED XSS (executes instantly on submission)
    echo $comment;
 
    // STORED XSS (executes later when page loads)
    file_put_contents($commentsFile, $comment . "\n", FILE_APPEND);
 
    exit;
}
?>
<!DOCTYPE html>
<html>
<head>
    <title>Reflected + Stored XSS Demo</title>
 
    <style>
        body {
            font-family: Arial;
        }
        .container {
            width: 50%;
            margin: auto;
            margin-top: 50px;
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.3);
        }
        #commentsBox {
            margin-top: 20px;
            height: 250px;
            overflow-y: scroll;
            background: #f7f7f7;
            padding: 10px;
            border: 1px solid #ccc;
        }
    </style>
 
    <script>
        function loadComments() {
            // Fetch comments.txt from the server using a GET request
            fetch("comments.txt")
                .then(res => res.text())  // Convert the file contents into plain text
                .then(data => {
                    // STORED XSS executes here:
                    // innerHTML inserts the stored comments as raw HTML,
                    // so any script inside comments.txt will run.
                    document.getElementById("commentsBox").innerHTML = data;
                });
        }
 
        // Automatically run loadComments() when the page finishes loading
        window.onload = loadComments;
    </script>
</head>
 
<body>
<div class="container">
    <h2>ðŸ”¥ XSS DEMO (Reflected + Stored)</h2>
 
    <form method="POST">
        <textarea name="comment" style="width:100%; height:80px;"></textarea>
        <button type="submit">Submit</button>
    </form>
 
    <h3>Stored Comments</h3>
    <div id="commentsBox"></div>
</div>
</body>
</html>
